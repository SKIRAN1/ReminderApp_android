<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.NotifyUsers"
    android:background="@color/white"
    >

    <include
        layout="@layout/admin_appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Alert Users"
         android:layout_gravity="center"
         android:textSize="26sp"
         android:textColor="@color/black"
         android:textStyle="italic|bold"
         />
<!--        <Button-->
<!--            android:id="@+id/btn_greetUsers"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:backgroundTint="@color/main"-->
<!--            android:layout_marginTop="32dp"-->
<!--            android:textAllCaps="false"-->
<!--            android:text="@string/greetUsers"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:textSize="24dp" />-->
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_notificationText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Notification"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/black"
                app:endIconMode="custom"
                app:helperTextTextColor="@android:color/holo_red_dark"
                app:errorTextColor="@android:color/holo_red_dark"
                app:hintTextColor="@android:color/holo_red_dark"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@color/black"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/main"
                    android:textSize="20dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btn_notify"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/main"
            android:text="Notify"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="24dp" />
    </LinearLayout>

</RelativeLayout>